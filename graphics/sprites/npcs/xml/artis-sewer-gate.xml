<sprite>
    <imageset name="npc"
              src="graphics/sprites/npcs/sprite/artis-sewer-gate.png"
              width="96"
              height="96"
              offsetY="-3"/>

    <action name="stand" imageset="npc">
        <!-- Open -->
        <animation direction="up">
            <frame index="7"/>
        </animation>
        <!-- Closed -->
        <animation direction="down">
            <frame index="0"/>
        </animation>
        <!-- Closing -->
        <animation direction="left">
            <sequence start="0" end="7" delay="200"/>
            <frame index="7"/>
        </animation>
        <!-- Opening -->
        <animation direction="right">
            <frame index="7" delay="200"/>
            <frame index="6" delay="200"/>
            <frame index="5" delay="200"/>
            <frame index="4" delay="200"/>
            <frame index="3" delay="200"/>
            <frame index="2" delay="200"/>
            <frame index="1" delay="200"/>
            <frame index="0"/>
        </animation>
    </action>
</sprite>
